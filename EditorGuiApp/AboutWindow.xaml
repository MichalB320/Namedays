<Window x:Class="EditorGuiApp.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorGuiApp"
        mc:Ignorable="d"
        Title="AboutWindow" Height="180" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Nameday" FontWeight="Bold" FontSize="20"/>
        <TextBlock Text="Version 1.0" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Copyright (c) 2023 Michal Bežo" HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="This is app for editing and viewing namedays" HorizontalAlignment="Left" Margin="10,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button Margin="0,0,15,15" Width="70" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="OnOKClick" Grid.Column="1">OK</Button>
    </Grid>
</Window>
